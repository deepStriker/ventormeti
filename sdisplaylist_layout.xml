<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gauri.officialmentor.Display">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create List"
        android:id="@+id/Bcreate"
        android:onClick="buttonClick3"
        android:layout_above="@+id/Bupdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update List"
        android:id="@+id/Bupdate"
        android:layout_below="@+id/Bsearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display List"
        android:id="@+id/Bdisplay"
        android:onClick="buttonclick5"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Bsearch"
        android:layout_alignEnd="@+id/Bsearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search List"
        android:id="@+id/Bsearch"
        android:layout_above="@+id/Bdisplay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonclick6"/>
</RelativeLayout>
